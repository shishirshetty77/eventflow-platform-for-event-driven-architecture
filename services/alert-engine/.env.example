# Alert Engine Service Environment Configuration

# Service Settings
SERVICE_NAME=alert-engine
ENVIRONMENT=development
VERSION=1.0.0
LOG_LEVEL=debug

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
ALERTS_TOPIC=alerts
DLQ_TOPIC=alerts-dlq
CONSUMER_GROUP=alert-engine-group

# Server Ports
METRICS_PORT=9094
HEALTH_PORT=8084

# Slack Configuration
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
SLACK_ENABLED=false

# SendGrid Email Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@example.com
SENDGRID_FROM_NAME=Alert Engine
EMAIL_RECIPIENTS=
EMAIL_ENABLED=false

# Webhook Configuration
WEBHOOK_URLS=
WEBHOOK_HEADERS=
WEBHOOK_ENABLED=false

# Processing Settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
BATCH_SIZE=10
BATCH_TIMEOUT_SECONDS=5

# Grouping and Suppression
GROUPING_WINDOW_SECONDS=60
SUPPRESSION_WINDOW_SECONDS=300
MAX_ALERTS_PER_GROUP=10
