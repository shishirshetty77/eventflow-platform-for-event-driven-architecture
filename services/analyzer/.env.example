# Analyzer Service Environment Configuration

# Service Settings
SERVICE_NAME=analyzer
ENVIRONMENT=development
VERSION=1.0.0
LOG_LEVEL=debug

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
CONSUMER_GROUP=analyzer-group
METRICS_TOPIC=service-metrics
LOGS_TOPIC=service-logs
ALERTS_TOPIC=alerts

# Server Ports
METRICS_PORT=9093
HEALTH_PORT=8083

# Analysis Configuration
SLIDING_WINDOW_SECONDS=300
ROLLING_WINDOW_SECONDS=900
ANALYSIS_INTERVAL_SECONDS=5

# Default Thresholds
DEFAULT_CPU_THRESHOLD=80.0
DEFAULT_MEMORY_THRESHOLD=80.0
DEFAULT_LATENCY_THRESHOLD=1000.0
DEFAULT_ERROR_RATE_THRESHOLD=5.0

# Deviation Analysis
DEVIATION_MULTIPLIER=2.0
MIN_SAMPLES_FOR_DEVIATION=10

# Cooldown Settings
DEFAULT_COOLDOWN_SECONDS=300
