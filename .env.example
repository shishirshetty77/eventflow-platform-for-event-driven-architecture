# =============================================================================
# EventFlow Platform - Environment Variables
# =============================================================================
# Copy this file to .env and customize values as needed.
# Docker Compose will automatically load the .env file.
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=eventflow
ENV=production
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Service Ports (External)
# -----------------------------------------------------------------------------
AUTH_PORT=8001
ORDERS_PORT=8002
PAYMENTS_PORT=8003
NOTIFICATION_PORT=8004
ANALYZER_PORT=8005
ALERT_ENGINE_PORT=8006
UI_BACKEND_PORT=8007
DASHBOARD_PORT=3001

# -----------------------------------------------------------------------------
# Infrastructure
# -----------------------------------------------------------------------------
# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_EXTERNAL_PORT=9092

# Zookeeper
ZOOKEEPER_PORT=2181

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_AGENT_PORT=6831

# -----------------------------------------------------------------------------
# UI Tools
# -----------------------------------------------------------------------------
# Kafka UI
KAFKA_UI_PORT=8080

# Redis Commander
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# -----------------------------------------------------------------------------
# Dashboard Authentication
# -----------------------------------------------------------------------------
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Service-Specific Settings
# -----------------------------------------------------------------------------
# Analyzer
WINDOW_SIZE_SECONDS=60

# Alert Engine
DEFAULT_CPU_THRESHOLD=80.0
DEFAULT_MEMORY_THRESHOLD=85.0
DEFAULT_LATENCY_THRESHOLD=500.0

# Notification
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SLACK_WEBHOOK_URL=
